{
	"version": "2.0.0",
	"command": "node",
	"args": ["::path::"],
	"tasks": [
		{
			"taskName": "windows debug",
			"suppressTaskName": true,
			"echoCommand": true,
			"args": ["windows", "--run", "--debug"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		},
		{
			"taskName": "windows release",
			"isBuildCommand": true,
			"suppressTaskName": true,
			"echoCommand": true,
			"args": ["windows", "--run"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		},
		{
			"taskName": "html5 debugger",
			"suppressTaskName": true,
			"echoCommand": true,
			"args": ["html5", "--run", "--debug", "--port 8080", "--server"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		},
		{
			"taskName": "flash debug",
			"suppressTaskName": true,
			"echoCommand": true,
			"args": ["flash", "--compile", "--run", "--debug"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		},
		{
			"taskName": "flash release",
			"suppressTaskName": true,
			"args": ["flash", "--compile", "--run"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		},
		{
			"taskName": "flash debugger",
			"suppressTaskName": true,
			"echoCommand": true,
			"args": ["flash", "--compile", "--debug"],
			"problemMatcher": {
				"fileLocation": ["relative", "${workspaceRoot}/build"],
				"pattern": "$haxe"
			}
		}	
    ]
}