{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome against localhost, with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080",
			"sourceMaps": true,
			"preLaunchTask": "html5 debugger",
			"webRoot": "${workspaceRoot}"
		},
		{
			"name": "Attach to Chrome, with sourcemaps",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}"
		},
		{
			"name": "Flash",
			"type": "fdb",
			"request": "launch",
			"program": "${workspaceRoot}/build/flash/::name::.swf"
		},
		{
			"name": "Flash (+rebuild)",
			"type": "fdb",
			"request": "launch",
			"program": "${workspaceRoot}/build/flash/::name::.swf",
			"preLaunchTask": "flash debugger"
		}
	]
}